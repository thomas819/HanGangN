<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:orientation="vertical"
    tools:context=".view.fragment.bottomsheet.HomeBottomFragment">

    <Button
        android:id="@+id/fragment_home_filterBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/drawable_home_filter"
        android:drawableRight="@drawable/ic_arrow_down"
        android:gravity="center_vertical"
        android:paddingRight="20dp"
        android:paddingStart="24dp"
        android:text="필터로 검색하기"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="스포츠" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_home_botttom_sport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>